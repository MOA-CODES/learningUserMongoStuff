      <section id="healthStage">
          <div class="container">
            <P> <br> <br> <br> </P>
              <h1 style="color: 103908; font-family: Lucida Fax; font-size: 30px;"  >STEP V: HEALTH DESK</h1>
              <P> </P>
            <form id="healthform" action="results.html" method="POST"  onsubmit="return false">
                <div class="form-group">
                  <label class="now1" for="exampleInputEmail1">StudID:</label>
                  <input type="text" class="form-control" name="StudID" value="<%- stud.StudID%>" aria-describedby="emailHelp" placeholder="Enter First Name"  readonly>
                </div>
                <P> </P>
                <div>
                  <label  class="now1" for="exampleInputEmail1">Gender:&nbsp;&nbsp;&nbsp;</label>
            
                  <input type="radio" id="healthMale" name="gender" value="Male" <%= stud.Gender == 'Male'?'checked':'' %>>
                  <label for="Male">Male</label>
                  <input type="radio" id="healthFemale" name="gender" value="Female" <%= stud.Gender == 'Female'?'checked':'' %>>
                  <label for="Female">Female</label>
              </div>
              <P> </P>
              <div class="form-group">
                  <label  class="now1" for="DOB">Date of Birth:</label>
                  <input type="date" value="<%- stud.DOB%>" class="form-control" id="DOB" name="DOB" style="background-color: FAF3F5;" required>
                </div>
                <P> </P>
                <div class="form-group">
                  <label  class="now1" for="nationality">Nationality: </label>
                    <input type="text" value="<%- stud.Nationality%>" class="form-control" name="Nationality" id="nationality" aria-describedby="emailHelp" placeholder="Enter Nationality" style="background-color: FAF3F5;" required>
                </div>
                <P> </P>
                <div class="form-group">
                    <label  class="now1" for="exampleInputEmail1">House Address:</label>
                    <input type="text" value="<%- stud.Address%>" class="form-control" name="Address" id="houseAddress" aria-describedby="emailHelp" placeholder="Enter House Address" style="background-color: FAF3F5;" required>
                </div>
                <P> </P>
                <div class="form-group">
                    <label  class="now1" for="exampleInputEmail1">Email:</label>
                    <input type="email" value="<%- stud.SchoolEmail%>" class="form-control" name="SchoolEmail" id="healthEmail" aria-describedby="emailHelp" placeholder="Enter Email Adress" style="background-color: FAF3F5;" required>
                </div>
                <P> </P>
                <div class="form-group">
                  <label  class="now1" for="exampleInputEmail1">Mobile No:</label>
                  <input type="number" value="<%- stud.Phonenumber%>" class="form-control" id="mobileNo" aria-describedby="emailHelp" name="Phonenumber" placeholder="Enter Mobile Number" style="background-color: FAF3F5;" required>
              </div>
                <P> </P>
                <div>
                  <label  class="now1" for="marital-status">Marital Status:</label>
                  <P> </P>
                  <select name="MaritalStatus" value="<%- stud.MaritalStatus%>" id="marital-status" style="background-color: FAF3F5;" required>
                      <option value="Single">Single</option>
                      <option value="Married">Married</option>
                      <option value="Divorced">Divorced</option>
                  </select>
                </div>
                <p> </p>
                <div>
                  <label  class="now1" for="blood-group">Blood Group:</label>
                  <P> </P>
                  <select name="BG" value="<%- stud.BG%>" id="blood-group" style="background-color: FAF3F5;" required>
                      <option value="A+">A+</option><option value="A-">A-</option>
                      <option value="B+">B+</option><option value="B-">B-</option>
                      <option value="O+">O+</option><option value="O-">O-</option>
                      <option value="AB+">AB+</option><option value="AB-">AB-</option>
                  </select>
                </div>
                <P> </P>
                <div>
                  <label  class="now1" for="genotype">Genotype:</label>
                  <P> </P>
                  <select name="GT" value="<%- stud.GT%>" id="genotype" style="background-color: FAF3F5;" required>
                      <option value="AA">AA</option><option value="AB">AB</option>
                      <option value="AO">AO</option><option value="OO">OO</option>
                      <option value="BB">BB</option>
                      <option value="BO">BO</option>
                  </select>
                </div>
                <P> </P>
              <div class="form-group">
                  <label  class="now1" for="medicalCondition">Medical Condition:</label>
                  <input type="text" value="<%- stud.MedicalCond%>" class="form-control" id="medicalCondition" name="MedicalCond" aria-describedby="emailHelp" placeholder="Enter If Any" style="background-color: FAF3F5;" required>
              </div>
              <p> </p>
              <div class="form-group">
                  <label  class="now1" for="allergies">Allergies:</label>
                  <input type="text" value="<%- stud.MedicalCond%>" class="form-control" id="allergies" name="Allergies" aria-describedby="emailHelp" placeholder="Enter Allergies If Any" style="background-color: FAF3F5;" required>
              </div>
              <P> </P>
                <p> </p>
                <!-- <div class="form-group">
                  <label  class="now1" for="dateRegistered">Date Registered:</label>
                  <input type="date" class="form-control" id="registerDate" name="DateReg" style="background-color: FAF3F5;" required>
                </div> -->
                <P> </P>
                <P> </P>
                <P> <br> </P>
                <label  class="now1" for="">GUARDIAN CONTACT</label><br>
                <P> </P>
                <div class="form-group">
                  <label  class="now1" for="parentName">Name:</label>
                  <input type="text" value="<%- stud.Parentname%>"class="form-control" id="parentName" name="Parentname" aria-describedby="emailHelp" placeholder="Enter Parent Name" style="background-color: FAF3F5;" required>
              </div>
              <P> </P>
              <div class="form-group">
                  <label  class="now1" for="parentRelationship">Relationship:</label>
                  <input type="text" value="<%- stud.ParentRel%>" class="form-control" id="parentRelationship" name="ParentRel" aria-describedby="emailHelp" placeholder="Enter Relationship" style="background-color: FAF3F5;" required>
              </div>
              <P> </P>
              <div class="form-group">
                  <label  class="now1" for="parentAddress">Parent Address:</label>
                  <input type="text" value="<%- stud.ParentAddress%>" class="form-control" id="parentAddress"  name="ParentAddress" aria-describedby="emailHelp" placeholder="Enter Parent Address" style="background-color: FAF3F5;" required>
              </div>
              <P> </P>
              <div class="form-group">
                  <label  class="now1" for="parentPhoneNo">Phone Number:</label>
                  <input type="number" value="<%- stud.ParentPhone%>"  class="form-control" id="parentPhoneNo" name="ParentPhone" aria-describedby="emailHelp" placeholder="Enter Parent Phone Number" style="background-color: FAF3F5;" required>
              </div>
              <P></P>
              <P> </P>
              <P> </P>
              <button type="submit" class="btn btn-primary">Submit</button>
              <p> </p>
            </form>
              <P> </P>
              <div class="table-responsive">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>ADMIN APPROVAL</th>
                        <th>STATUS</th>
                        <th>CHECK</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                          <td>OVERALL CHECK</td>
                          <td>APPROVED</td>
                          <td>
                          <label for="radio1"></label>
                          <input type="radio"  class="larger1" name="radios" id="healthOverall" />
                          </td>
                      </tr>
                      <tr>
                        <td colspan="3"><input type="text" name="" id="statushealth" value="<%-stud.Healthvr%>" hidden> </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
                <button class="previous" id="previoush" disabled>Previous</button>
                <a href="/studAct?StudID=<%- stud.StudID%>">
                  <button class="next" id="nextheal">Next</button>
                </a>
              </div>
      </section>
    </div>

    <script>
      var nextbutton = document.getElementById("nextheal"); 

      var housingstatus = document.getElementById("statushousing").value;

      var hhousingstatus = document.getElementById("healthOverall");
      
      if(housingstatus == "true"){
        hhousingstatus.checked = true;
        nextbutton.disabled = false;
      }else{
        nextbutton.disabled = true;
      }

    </script>


