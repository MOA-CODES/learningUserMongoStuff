      <section id = "Guide">
          <div class="container">
            <P> <br> <br> <br> </P>
              <h1 style="color: #293a33; font-family: Lucida Fax; font-size: 20px;"  >Hi, Start Your Orientation Now</h1>
              <P> </P>
              <h1 style="color: 103908; font-family: Lucida Fax; font-size: 30px;"  >STEP I: ADMISSIONS</h1>
              <p> </p>
                  <div class="table-responsive">
                      <table class="table table-hover">
                        <thead>
                          <tr>
                            <th>No.</th>
                            <th>Activities</th>
                            <th>Files</th>
                            <th>Submit</th>
                            <th>Check</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                              <td>1</td>
                              <td>Submit Jamb Result Here</td>
                              <form>
                              <td>
                                  <input type="file" name="Jamb" id="jambFile">
                              </td>
                              <td>
                                <button type="submit" class="btn btn-primary" onclick="valid()">Submit</button>
                              </td>
                              <form>
                              <td>
                                  <input type="checkbox" name="admindoc" class="larger" id="jambCheck" required>
                            </td>
                          </tr>
                          <tr>
                              <td>3</td>
                              <td>Submit Your WAEC Result Or Any Other Alternative Here</td>
                              <form>
                              <td> 
                                  <input type="file" name="Waec" id="waecFile">
                                  
                              </td>
                              <td>
                                <button type="submit" class="btn btn-primary" onclick="valid()">Submit</button>
                              </td>
                              <form>
                              <td>
                                  <input type="checkbox" name="admindoc" class="larger" id="waecCheck" required>
                            </td>
                          </tr>
                          <tr>
                              <td>4</td>
                              <td>Submit Your Transcript (University/High School/Transfer)</td>
                              <form>
                              <td> 
                                  <input type="file" name="Transcript" id="tscriptFile">
                          
                              </td>
                              <td>
                                <button type="submit" class="btn btn-primary" onclick="valid()">Submit</button>
                              </td>
                              <form>
                              <td>
                                  <input type="checkbox" name="admindoc" class="larger" id="tscriptCheck" required>
                            </td>
                          </tr>
                          <tr>
                              <td>5</td>
                              <td>Submit Your Recommendation Letter</td>
                              <form>
                              <td> 
                                  <input type="file" name="Rec_letter" id="rletterFile">
                              
                              </td>
                              <td>
                                <button type="submit" class="btn btn-primary" onclick="valid()">Submit</button>
                              </td>
                              <form>
                              <td>
                                  <input type="checkbox" name="admindoc" class="larger" id="rletterCheck" required>
                            </td>
                          </tr>
                          <tr>
                              <td>6</td>
                              <td>Submit ID (International Passpoert/ Drivers License/ NIN)</td>
                              <form>
                              <td> 
                                  <input type="file" name="Passport" id="idFile">
                                  
                              </td>
                              <td>
                                <button type="submit" class="btn btn-primary" onclick="valid()">Submit</button>
                              </td>
                              <form>
                              <td>
                                  <input type="checkbox" name="admindoc" class="larger" id="idCheck" required>
                            </td>
                          </tr>
                          <tr>
                              <td>7</td>
                              <td>Submit Your Personal Essay</td>
                              <form>
                              <td> 
                                  <input type="file" name="P_essay" id="pEssayFile">
                            
                              </td>
                              <td>
                                <button type="submit" class="btn btn-primary" onclick="valid()">Submit</button>
                              </td>
                              <form>
                              <td>
                                  <input type="checkbox" name="admindoc" class="larger" id="essayCheck" required>
                            </td>
                          </tr>
                        </tbody>
                      </table>
                      <P> </P>
                    </div>
                    <p> <br> <br> </p>

              </form>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>ADMIN APPROVAL</th>
                    <th>STATUS</th>
                    <th>CHECK</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                      <td>OVERALL CHECK</td>
                      <td>APPROVED</td>
                      <td>
                      <label for="radio1"></label>
                      <input type="radio"  class="larger1" name="radios" id="admissionOverall" />
                      </td>
                  </tr>
                  <tr>
                    <td colspan="3"><input type="text" name="" id="statusAdminvr" value="<%-stud.Adminvr%>" hidden> </td>
                  </tr>
                </tbody>
              </table>
            </div>
            <button class="previous" id="previousa" disabled>Previous</button>
            <a href="/finance?StudID=<%- stud.StudID%>">
              <button class="next" id="nexta" disabled>Next</button>
            </a>
      </section>
    </div>
   
    <script>
       var nextbutton = document.getElementById("nexta"); 

        var adminvrstatus = document.getElementById("statusAdminvr").value;

        var aadminvrstatus = document.getElementById("admissionOverall");


        if(adminvrstatus == "true"){
          aadminvrstatus.checked = true;
          nextbutton.disabled = false;
        }else{
          nextbutton.disabled = true;
        }

    </script>
     
    
